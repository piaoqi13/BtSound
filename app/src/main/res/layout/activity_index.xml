<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:text=""
            android:background="@color/title_red"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingBottom="200dp"
            android:background="@color/white_text">
            <EditText
                android:id="@+id/edt_result_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:gravity="center"
                android:text="Speak Result"
                android:background="@null"
                android:textColor="#FF9224"
                android:textSize="20px"
                android:enabled="false"
                android:visibility="gone"/>
            <ImageView
                android:layout_width="200dp"
                android:layout_height="104dp"
                android:background="@drawable/index_logo"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:gravity="center_vertical|left"
            android:background="@color/title_red">
            <ImageView
                android:id="@+id/iv_menu"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/menu_logo"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/ll_changtiaobuju"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:visibility="gone"
        android:layout_marginBottom="55dp" >

        <!-- 直接长条布局 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="left">
            <View
                android:layout_width="70dp"
                android:layout_height="0.6dp"
                android:background="@color/black_text"/>
            <!-- 打电话 -->
            <LinearLayout
                android:id="@+id/ll_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="10dp">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/call_logo"/>
            </LinearLayout>
            <View
                android:layout_width="70dp"
                android:layout_height="0.6dp"
                android:background="@color/black_text"/>
            <!-- 拍照 -->
            <LinearLayout
                android:id="@+id/ll_paizhao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="10dp">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/take_picture_logo"/>
            </LinearLayout>
            <View
                android:layout_width="70dp"
                android:layout_height="0.6dp"
                android:background="@color/black_text"/>
            <!-- 录音 -->
            <LinearLayout
                android:id="@+id/ll_luyin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="10dp">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/luyin_logo"/>
            </LinearLayout>
            <View
                android:layout_width="70dp"
                android:layout_height="0.6dp"
                android:background="@color/black_text"/>
            <!-- 设置 -->
            <LinearLayout
                android:id="@+id/ll_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="10dp">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/setting_logo"/>
            </LinearLayout>
            <View
                android:layout_width="70dp"
                android:layout_height="0.6dp"
                android:background="@color/black_text"/>
            <!-- 问题 -->
            <LinearLayout
                android:id="@+id/ll_wenti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="10dp">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/wenti_logo"/>
            </LinearLayout>
            <View
                android:layout_width="70dp"
                android:layout_height="0.6dp"
                android:background="@color/black_text"/>
            <!-- 官网 -->
            <LinearLayout
                android:id="@+id/ll_website"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="10dp">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/website_logo"/>
            </LinearLayout>
            <View
                android:layout_width="70dp"
                android:layout_height="0.6dp"
                android:background="@color/black_text"/>
        </LinearLayout>
        <View
            android:layout_width="0.6dp"
            android:layout_height="match_parent"
            android:background="@color/black_text"/>
    </LinearLayout>


</FrameLayout>