<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@color/title_red"
        android:text=""/>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:text="使用说明"
            android:textColor="@color/title_red"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tv_instruction"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/instruction"
            android:textColor="@color/title_red"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="傲石语音，您的生活移动小助手。"
            android:textColor="@color/title_red"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="傲石语音支持在线和离线识别，离线功能仅对傲石客户开放。"
            android:textColor="@color/title_red"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="15dp"
            android:text="注意：语音命令要求普通话标准、清晰声音洪亮。按标准人名整理通讯录，语音拨号人名与通讯录要完全匹配。"
            android:textColor="@color/title_red"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:background="@color/title_red"
        android:gravity="center_vertical|right"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/back_logo"/>
    </LinearLayout>

</LinearLayout>